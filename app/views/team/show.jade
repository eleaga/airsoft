extends ../layout

block content
    h1.
        Infophoto #{team.picture}
    p Name: #{team.name}

    div.votes
        span.vote(to=team._id value='1') (#{team.positive}) recomendar |  
        span.vote(to=team._id value='0') (#{team.negative}) negativar

    h4 Membros
    each member in members
      p <a href="/player/#{member._id}">#{member.name}</a>